generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Branch {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  createdAt DateTime @default(now())
  teams     Team[]
  sales     Sale[]
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  branch    Branch   @relation(fields: [branchId], references: [id])
  branchId  Int
  members   User[]
}

model Sale {
  id        Int      @id @default(autoincrement())
  amount    Float
  date      DateTime @default(now())
  branch    Branch   @relation(fields: [branchId], references: [id])
  branchId  Int
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role   @default(USER)
  team     Team?  @relation(fields: [teamId], references: [id])
  teamId   Int?
}

enum Role {
  ADMIN
  USER
}
